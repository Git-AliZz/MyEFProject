@model IEnumerable<MyEFProject_Model.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Manage Books</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New Book</a>
</p>

@if (Model.Any())
{
    <table class="table">
        <thead class="table table-bordered">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ISBN)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookDetail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Publisher)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ISBN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookDetail.BookDetail_Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Publisher.Location)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Book_Id" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Book_Id" class="btn btn-outline-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Book_Id" class="btn btn-outline-danger">Delete</a>
                        <a asp-action="Delete" asp-route-id="@item.Book_Id" class="btn btn-outline-danger">Manage Author</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else { 
    <p>
        NO RECORDS FOUND ..
    </p>
}